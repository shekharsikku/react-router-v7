{
  "extends": "@repo/shared/tsconfig.base.json",
  "compilerOptions": {
    /* TypeScript Build Info & Build Output */
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "incremental": true,

    /* Path Alias & Base Url */
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "#/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
